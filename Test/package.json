Sub ChangeEmailSubjects()
    Dim selectedItems As Selection
    Dim selectedItem As Object
    
    ' Get the selected items
    Set selectedItems = Outlook.Application.ActiveExplorer.Selection
    
    ' Iterate through each selected item
    For Each selectedItem In selectedItems
        ' Check if the item is a mail item
        If TypeOf selectedItem Is MailItem Then
            ' Change the subject of the mail item
            selectedItem.Subject = "YourNewSubjectHere"
            ' Save changes
            selectedItem.Save
        End If
    Next selectedItem
End Sub
